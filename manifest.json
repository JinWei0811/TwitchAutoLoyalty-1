{
    "manifest_version": 2,
    "name": "忠誠點數助手",
    "description": "自動幫你領忠誠點數",
    "version": "1.0.0",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "browser_action": {
      "default_icon": "icon.png"
    },
    "permissions": [
        "tabs",
        "*://*.twitch.tv/*",
        "alarms"
    ],
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : true
    }
  }